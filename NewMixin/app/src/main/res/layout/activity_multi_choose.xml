<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/with_space_color"
    tools:context=".ui.multisend.MultiChooseActivity">

    <LinearLayout
        android:id="@+id/head_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/header_common" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/group_elv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_ly"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="180dp"
        android:background="@color/white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/choose_all_chb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="全选"
                android:textColor="@color/tx33" />

            <TextView
                android:id="@+id/choose_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/tx99"
                tools:text="已选择100人" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_step_ly"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next_step_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>