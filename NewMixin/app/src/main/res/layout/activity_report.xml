<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/with_space_color"
    android:orientation="vertical">

    <include layout="@layout/header_common" />

    <EditText
        android:id="@+id/report_content_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_bg"
        android:gravity="top"
        android:hint="@string/report_tip"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/report_add_pic_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/social_release_btn_add" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/report_pic_rv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="15dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/report_submit_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/default_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/submit"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>