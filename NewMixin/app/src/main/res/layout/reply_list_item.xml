<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="#282A2D"
                        android:textSize="18sp"
                        tools:text="23" />

                    <TextView
                        android:id="@+id/month_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#585858"
                        android:textSize="12sp"
                        tools:text="7月" />

                </LinearLayout>


                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#585858"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    tools:text="10:23" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#FFF4F4F4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tweet_pic_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:src="@mipmap/boy" />

                <TextView
                    android:id="@+id/tweet_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp"
                    android:textColor="#686868"
                    tools:text="#二手市场# 出手考研材科系专业课复习资料一套 价格可商量，有要的私戳~ 文艺部打八折！" />

            </LinearLayout>


            <TextView
                android:id="@+id/tweet_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#282A2D"
                android:layout_marginBottom="10dp"
                tools:text="我：你在弄啥来" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/with_space_color" />


</LinearLayout>
